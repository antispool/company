{% extends 'base.html.twig' %}

{% block body %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post" class="form-horizontal">
        <div class="control-group">
            <label class="control-label">username</label>
            <div class="controls">
                <input type="text" id="username" name="_username" placeholder="username" value="{{ last_username }}">
            </div>
        </div>
        <div class="control-group">
            <label class="control-label"  for="inputPassword">password</label>
            <div class="controls">
                <input type="password" id="password" name="_password" placeholder="password">
            </div>
        </div>
        <div class="control-group">
            <div class="controls">
                <button type="submit" class="btn">Sign in</button>
            </div>
        </div>
    </form>

{% endblock %}
